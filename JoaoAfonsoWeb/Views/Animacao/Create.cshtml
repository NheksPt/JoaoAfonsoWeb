@model JoaoAfonso.Domain.Entities.Animacao_trabalhos

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-gray m-lg-3 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-3">Trabalhos Animação</h2>
            </div>
        </div>
    </div>
    <div class="card-body border-bottom p-4">
        <form method="post" class="row">
            <div class="p-3">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Nome" class="form-control border shadow" />
                    <label asp-for="Nome" class="ms-2"></label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Descricao" class="form-control border shadow" />
                    <label asp-for="Descricao" class="ms-2"></label>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.SoftwareUsado" class="form-control border shadow" />
                    <label asp-for="SoftwareUsado" class="ms-2"></label>
                    <span asp-validation-for="SoftwareUsado" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Duracao" class="form-control border shadow" />
                    <label asp-for="Duracao" class="ms-2"></label>
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.UrlImagem" class="form-control border shadow" />
                    <label asp-for="UrlImagem" class="ms-2"></label>
                    <span asp-validation-for="UrlImagem" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.TamanhoFicheiro" class="form-control border shadow" />
                    <label asp-for="TamanhoFicheiro" class="ms-2"></label>
                    <span asp-validation-for="TamanhoFicheiro" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Criar
                        </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Animacao" asp-action="Index" class="btn btn-secondary w-100">
                            <i class=" bi bi-x-circle"></i>Cancelar
                        </a>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
